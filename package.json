{
  "name": "saucelabs-access-api-gui",
  "version": "1.0.0",
  "description": "Sauce Labs Real Device Cloud API GUI",
  "main": "electron-main.js",
  "scripts": {
    "start": "concurrently \"npm:react-start\" \"npm:electron-start\"",
    "react-start": "vite",
    "electron-start": "wait-on tcp:127.0.0.1:5173 && electron .",
    "build": "vite build",
    "build:mac": "npm run build && electron-builder --mac",
    "build:win": "npm run build && electron-builder --win",
    "build:all": "npm run build && electron-builder --mac --win",
    "dist": "npm run build && electron-builder",
    "start one": "npm start"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "build": {
    "appId": "com.saucelabs.access-api-gui",
    "productName": "Sauce Labs Access API",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron-main.js",
      "preload.js",
      "scripts/**/*",
      "package.json"
    ],
    "mac": {
      "category": "public.app-category.developer-tools",
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "build/icon.icns",
      "entitlements": "build/entitlements.mac.plist",
      "publish": "never"
    },,
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "build/icon.ico",
      "publish": "never"
    },,
    "linux": {
      "target": [
        "AppImage",
        "deb"
      ],
      "icon": "build/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "dependencies": {
    "axios": "^1.12.2",
    "electron-store": "^11.0.2",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-icons": "^5.5.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.0",
    "concurrently": "^9.2.1",
    "electron": "^38.3.0",
    "electron-builder": "^25.1.8",
    "vite": "^7.1.11",
    "wait-on": "^9.0.1"
  }
}
